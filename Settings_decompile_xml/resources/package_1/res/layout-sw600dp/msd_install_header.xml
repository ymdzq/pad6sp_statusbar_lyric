<?xml version='1.0' encoding='utf-8' ?>
<LinearLayout android:orientation="vertical"
              android:focusable="false"
              android:clickable="false"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content" xmlns:android="http://schemas.android.com/apk/res/android">
  <TextView android:textStyle="bold"
            android:gravity="center"
            android:id="@id/msd_install_summary_1"
            android:paddingTop="40.0dp"
            android:visibility="gone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/msd_pc_system_install_summary_xp"
            style="@android:style/TextAppearance.Medium" />
  <ImageView android:gravity="center"
             android:layout_gravity="center_horizontal"
             android:id="@id/msd_install_icon_1"
             android:paddingTop="20.0dp"
             android:visibility="gone"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:src="@drawable/msd_install_driver_setup_xp"
             android:contentDescription="@null" />
  <TextView android:textStyle="bold"
            android:gravity="center"
            android:id="@id/msd_install_summary"
            android:paddingTop="40.0dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            style="@android:style/TextAppearance.Medium" />
  <TextView android:textStyle="bold"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:id="@id/msd_install_download_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="8.0dp"
            style="@android:style/TextAppearance.Medium" />
  <FrameLayout android:layout_gravity="center_horizontal"
               android:paddingTop="20.0dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content">
    <ImageView android:gravity="center"
               android:layout_gravity="center_horizontal"
               android:id="@id/msd_install_icon"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:contentDescription="@null" />
    <TextView android:textSize="7.0sp"
              android:id="@id/msd_install_model"
              android:visibility="gone"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              style="@android:style/TextAppearance.Medium" />
    <ImageView android:id="@id/msd_install_magnifier"
               android:visibility="gone"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/msd_install_driver_magnifier"
               android:contentDescription="@null" />
  </FrameLayout>
</LinearLayout>